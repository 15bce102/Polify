<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="40dp"
        android:background="@mipmap/ic_profile"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_dollar"
        android:layout_width="26dp"
        android:layout_height="24dp"
        android:background="@mipmap/ic_coins"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="38dp" />

    <TextView
        android:id="@+id/txt_coins"
        android:layout_width="65dp"
        android:layout_height="51dp"
        android:text="100"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="30dp" />

    <TextView
        android:id="@+id/txt_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rohit Mittal"
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="263dp"
        tools:layout_editor_absoluteY="133dp" />

    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/ic_edit"
        tools:layout_editor_absoluteX="371dp"
        tools:layout_editor_absoluteY="133dp" />

    <ImageView
        android:id="@+id/img_plus"
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:background="@mipmap/ic_plus"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="38dp" />



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="282dp"
        android:id="@+id/recyclerView"/>


</androidx.constraintlayout.widget.ConstraintLayout>